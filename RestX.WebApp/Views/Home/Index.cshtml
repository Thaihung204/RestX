@{
    ViewData["Title"] = "Trang Chủ";
}
<link rel="stylesheet" href="~/css/style.css" />
<div class="container-mobile">
    <!-- Tiêu đề -->
    <div class="header">
        <div style="font-size:1.2rem;color:#888;margin-right:8px;">🏠</div>
        <div class="header-info">
            <div class="header-title">Mi Kung Fu - 124B Đường 2 th...</div>
            <div class="header-address">124b Đ. 2 Tháng 9, Bình Thuận, Hải...</div>
        </div>
        <div class="header-flag">
            <span style="font-size:1.2rem;">🇬🇧</span>
        </div>
    </div>

    <!-- Banner -->
    <div class="banner">
        <img src="https://via.placeholder.com/400x140?text=Banner" alt="Banner" />
    </div>

    <!-- Lời chào -->
    <div class="greeting">
        <span class="icon">🌙</span>
        Chào buổi tối <span class="customer">Khách hàng</span>
        <span class="edit">✏️</span>
    </div>
    <div class="table-info">
        Chúng tôi sẽ mang món ăn đến bàn của bạn: <span class="table-code">C1</span>
    </div>

    <!-- Điểm tích lũy qua số điện thoại -->
    <div class="phone-points">
        <span class="icon">🎁</span>
        Nhập số điện thoại để tích điểm
    </div>

    <!-- Hành động nhanh -->
    <div class="quick-actions">
        <div class="quick-action">
            <span class="icon">🧾</span>
            Yêu cầu hóa đơn
        </div>
        <div class="quick-action">
            <span class="icon">🧑‍💼</span>
            Yêu cầu dịch vụ
        </div>
        <div class="quick-action">
            <span class="icon">⭐</span>
            Gửi phản hồi
        </div>
    </div>

    <!-- Thực đơn đặt món -->
    <div class="order-menu">
        <span class="icon">🍽️</span>
        Xem thực đơn - Đặt món ăn
        <span class="arrow">&gt;</span>
    </div>

    <!-- Nút nổi -->
    <div class="floating-btn">
        <span>🔔</span>
    </div>

    <div class="powered-by">
        Cung cấp bởi iPOS.vn
    </div>
</div>