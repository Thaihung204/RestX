@model RestX.WebApp.Models.ViewModels.DashboardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}

<div class="owner-fade-in">
    <div class="owner-page-header">
        <h1 class="owner-page-title">
            <i class="bi bi-speedometer2 me-2" style="color: var(--owner-primary);"></i>
            Dashboard
        </h1>
        <div class="owner-header-actions">
            <span class="owner-greeting">
                <i class="bi bi-sun-fill me-1" style="color: var(--owner-primary);"></i>
                Good evening, Owner!
            </span>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="owner-stat-card">
                <div class="owner-stat-number">$36,358</div>
                <div class="owner-stat-label">
                    <i class="bi bi-currency-dollar me-1"></i>
                    Total Revenue
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="owner-stat-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <div class="owner-stat-number">+9%</div>
                <div class="owner-stat-label">
                    <i class="bi bi-arrow-up-circle me-1"></i>
                    Growth Rate
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="owner-stat-card" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);">
                <div class="owner-stat-number">1,234</div>
                <div class="owner-stat-label">
                    <i class="bi bi-people me-1"></i>
                    Total Orders
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="owner-stat-card" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                <div class="owner-stat-number">$6,820</div>
                <div class="owner-stat-label">
                    <i class="bi bi-calendar-month me-1"></i>
                    Monthly Earnings
                </div>
            </div>
        </div>
    </div>

    <!--  Row 1 -->
    <div class="row">
        <div class="col-lg-8 d-flex align-items-stretch">
            <div class="owner-card w-100">
                <div class="owner-card-header">
                    <div class="d-sm-flex d-block align-items-center justify-content-between">
                        <div>
                            <h5 class="mb-0">
                                <i class="bi bi-bar-chart-line me-2"></i>
                                Profit Overview
                            </h5>
                        </div>
                        <div>
                            <select class="owner-form-control">
                                <option value="1">March 2025</option>
                                <option value="2">April 2025</option>
                                <option value="3">May 2025</option>
                                <option value="4">June 2025</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="owner-card-body">
                    <div id="chart"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12 mb-3">
                    <!-- Yearly Breakup -->
                    <div class="owner-card">
                        <div class="owner-card-body">
                            <h5 class="mb-3">
                                <i class="bi bi-pie-chart me-2"></i>
                                Yearly Breakup
                            </h5>
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h4 class="fw-bold mb-3 text-primary">$36,358</h4>
                                    <div class="d-flex align-items-center mb-3">
                                        <span class="me-2 rounded-circle bg-success d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                            <i class="bi bi-arrow-up text-white"></i>
                                        </span>
                                        <span class="text-success me-1 fw-bold">+9%</span>
                                        <span class="text-muted">last year</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div class="me-4">
                                            <span class="rounded-circle d-inline-block me-2" style="width: 8px; height: 8px; background: var(--owner-primary);"></span>
                                            <span class="text-muted">2023</span>
                                        </div>
                                        <div>
                                            <span class="rounded-circle d-inline-block me-2" style="width: 8px; height: 8px; background: var(--owner-primary-light);"></span>
                                            <span class="text-muted">2024</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="d-flex justify-content-center">
                                        <div id="breakup"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <!-- Monthly Earnings -->
                    <div class="owner-card">
                        <div class="owner-card-body">
                            <div class="row align-items-start">
                                <div class="col-8">
                                    <h5 class="mb-3">
                                        <i class="bi bi-cash-coin me-2"></i>
                                        Monthly Earnings
                                    </h5>
                                    <h4 class="fw-bold mb-3 text-success">$6,820</h4>
                                    <div class="d-flex align-items-center">
                                        <span class="me-2 rounded-circle bg-warning d-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                            <i class="bi bi-arrow-up text-white"></i>
                                        </span>
                                        <span class="text-warning me-1 fw-bold">+9%</span>
                                        <span class="text-muted">last month</span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="d-flex justify-content-end">
                                        <div class="text-white rounded-circle p-3 d-flex align-items-center justify-content-center" style="background: var(--owner-primary); width: 48px; height: 48px;">
                                            <i class="bi bi-currency-dollar"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="earning"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-4 d-flex align-items-stretch">
            <div class="owner-card w-100">
                <div class="owner-card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="owner-card-body">
                    <div class="timeline-widget">
                        <div class="timeline-item d-flex mb-3">
                            <div class="timeline-time text-muted flex-shrink-0">09:30</div>
                            <div class="timeline-badge mx-3">
                                <span class="rounded-circle d-inline-block" style="width: 8px; height: 8px; background: var(--owner-primary);"></span>
                            </div>
                            <div class="timeline-desc">Payment received from John Doe of $385.90</div>
                        </div>
                        <div class="timeline-item d-flex mb-3">
                            <div class="timeline-time text-muted flex-shrink-0">10:00</div>
                            <div class="timeline-badge mx-3">
                                <span class="rounded-circle d-inline-block" style="width: 8px; height: 8px; background: #007bff;"></span>
                            </div>
                            <div class="timeline-desc">
                                <strong>New order placed</strong><br>
                                <a href="#" class="text-primary">#ML-3467</a>
                            </div>
                        </div>
                        <div class="timeline-item d-flex mb-3">
                            <div class="timeline-time text-muted flex-shrink-0">12:00</div>
                            <div class="timeline-badge mx-3">
                                <span class="rounded-circle d-inline-block" style="width: 8px; height: 8px; background: #28a745;"></span>
                            </div>
                            <div class="timeline-desc">Payment processed of $64.95</div>
                        </div>
                        <div class="timeline-item d-flex mb-3">
                            <div class="timeline-time text-muted flex-shrink-0">02:30</div>
                            <div class="timeline-badge mx-3">
                                <span class="rounded-circle d-inline-block" style="width: 8px; height: 8px; background: #ffc107;"></span>
                            </div>
                            <div class="timeline-desc">
                                <strong>New customer registered</strong><br>
                                Welcome bonus applied
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 d-flex align-items-stretch">
            <div class="owner-card w-100">
                <div class="owner-card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt me-2"></i>
                        Recent Orders
                    </h5>
                </div>
                <div class="owner-card-body">
                    <div class="table-responsive">
                        <table class="owner-table table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Status</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>#1001</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/profile/user-1.jpg" class="rounded-circle me-2" width="32" height="32" alt="">
                                            <div>
                                                <div class="fw-bold">John Smith</div>
                                                <small class="text-muted">Table 5</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>3 items</td>
                                    <td>
                                        <span class="owner-badge owner-badge-success">Completed</span>
                                    </td>
                                    <td><strong>$45.90</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>#1002</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/profile/user-2.jpg" class="rounded-circle me-2" width="32" height="32" alt="">
                                            <div>
                                                <div class="fw-bold">Sarah Johnson</div>
                                                <small class="text-muted">Table 12</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>2 items</td>
                                    <td>
                                        <span class="owner-badge owner-badge-warning">Preparing</span>
                                    </td>
                                    <td><strong>$32.50</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>#1003</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/profile/user-3.jpg" class="rounded-circle me-2" width="32" height="32" alt="">
                                            <div>
                                                <div class="fw-bold">Mike Davis</div>
                                                <small class="text-muted">Table 8</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>5 items</td>
                                    <td>
                                        <span class="owner-badge owner-badge-success">Completed</span>
                                    </td>
                                    <td><strong>$78.25</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/dashboard.js"></script>
    <script>
        var revenueLabels = @Html.Raw(JsonSerializer.Serialize(Model.DailyFinances.Select(x => x.Date.ToString("dd/MM"))));
        var profitData = @Html.Raw(JsonSerializer.Serialize(Model.DailyFinances.Select(x => x.Profit)));
    </script>
}